<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_login"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:background="@drawable/login_background"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="450dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="#66CDBA96"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:text="@string/login_content1"
                android:textSize="15dp"
                android:textColor="@color/login_content_color"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_height="50dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="@string/login_content2"
                android:textSize="15dp"
                android:textColor="@color/login_content_color"
                android:gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="30dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="100px"
        android:weightSum="6.5"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textColor="@color/login_button_text_color"
            android:background="@drawable/button_style_login"
            android:text="@string/login_button_login"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="0dp" />
        <Button
            android:background="@drawable/button_style_login"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="@string/login_button_register"
            android:textColor="@color/login_button_text_color"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_width="50dp"
            android:gravity="center"
            android:text="去看看"
            android:id="@+id/guest"
            android:textColor="#EEEED1"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="12dp"
            android:background="@drawable/login_look_next"
            android:layout_height="12dp" />
    </LinearLayout>
</LinearLayout>
